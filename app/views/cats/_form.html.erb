<%= form_with(model: @cat, class: "new-cat-form") do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :breed %>:
  <%= f.text_field :breed %>
  <br>
  <br>
  <%= f.label :age %>:
  <%= f.number_field :age %>
  <br>
  <br>
  <%= f.label :sex %>:
  <%= f.text_field :sex %>
  <br>
  <br>
  <%= f.label :price %>:
  <%= f.text_field :price %>
  <br>
  <br>
  <%= f.label :description %>:
  <%= f.text_area :description, size: "20x6" %>
  <br>
  <br>
  <br>
  <br>
  <%= f.label :picture %>
  <%= f.file_field :picture, accept: ['image/png', 'image/jpg', 'image/jpeg'] %>
  <br>
  <br>
  <%= f.submit "Create" %>

<% end %>